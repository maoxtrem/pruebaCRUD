{% extends "base.html.twig" %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h2>Prueba BackEnd</h2>
                    <a class="btn btn-primary btn-sm" href="{{ path('index') }}">Inicio</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('product_add') }}">Nuevo Producto</a>
                    <a class="btn btn-success btn-sm" href="{{ path('product_export') }}">Exportar</a>
                </div>
                <div class="card-body">
                    <h3 class="card-title">Lista de Producto</h3>>
                <div class="table-responsive" style="width: 100%; text-align: center">
                    <table id='tblDespTb' class="table table-sm table-bordered table-striped tablaFiltro" id="mydatatable">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Brand</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th colspan="2">Accion</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if products is not empty %}
                            {% for product in products %}
                                <tr>
                                    <td>{{ product.id}}</td>
                                    <td>{{ product.code}}</td>
                                    <td>{{ product.description}}</td>
                                    <td>{{ product.name}}</td>
                                    <td>{{ product.brand}}</td>
                                    <td>{{ product.category}}</td>
                                    <td>{{ product.price}}</td>
                                    <td><a class="btn btn-success btn-sm" href="{{ path('product_update',{'id':product.id}) }}">Editar</a></td>
                                    <td><a class="btn btn-danger btn-sm" href="{{ path('product_delete',{'id':product.id}) }}">Borrar</a></td>
                                </tr>
                            {% endfor %}
                        {% else%}
                            <tr>
                                <td colspan="8">no hay datos para mostrar</td>
                            </tr>
                        {% endif%}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>






















    </div>


{% endblock %}
